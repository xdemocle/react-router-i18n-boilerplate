{
  "name": "react-router-i18n-boilerplate",
  "description": "Production-ready React Router v7 boilerplate for startups, local vendors, and small businesses. Fast, modern, and SEO-optimized.",
  "version": "0.2.1",
  "type": "module",
  "scripts": {
    "bl": "pnpm run test:run && pnpm run trunk && pnpm run build",
    "build": "react-router build",
    "cf-typegen": "wrangler types",
    "deploy": "pnpm run build && wrangler deploy",
    "dev": "react-router dev",
    "preview": "pnpm run build && vite preview --mode production",
    "typecheck": "pnpm run cf-typegen && react-router typegen && pnpm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "trunk": "./trunk flakytests validate --junit-paths \"./junit.xml\"",
    "lint": "eslint ./workers ./app ./tests",
    "lint:fix": "pnpm run lint --fix",
    "prettier": "prettier ./workers ./app ./tests --check",
    "prettier:fix": "prettier ./workers ./app ./tests --write",
    "format": "pnpm run prettier:fix && pnpm run lint:fix"
  },
  "dependencies": {
    "isbot": "^5.1.28",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.0",
    "wrangler": "^4.16.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@cloudflare/vitest-pool-workers": "^0.8.31",
    "@edge-runtime/vm": "^5.0.0",
    "@react-router/dev": "^7.6.0",
    "@react-router/fs-routes": "^7.6.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/vite": "^4.1.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "framer-motion": "^12.12.1",
    "i18next": "^25.2.0",
    "i18next-browser-languagedetector": "^8.1.0",
    "i18next-http-backend": "^3.0.2",
    "i18next-http-middleware": "^3.7.4",
    "i18next-resources-to-backend": "^1.2.1",
    "miniflare": "^4.20250508.3",
    "prettier": "^3.5.3",
    "react-i18next": "^15.5.1",
    "react-intersection-observer": "^9.16.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7",
    "tw-animate-css": "^1.3.0",
    "typescript": "5.1.6",
    "vite": "^6.3.5",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.1.4",
    "vitest-browser-react": "^0.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.11.0"
}