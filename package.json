{
  "private": true,
  "name": "react-router-i18n-boilerplate",
  "description": "Production-ready React Router v7.js boilerplate for startups, local vendors, and small businesses. Fast, modern, and SEO-optimized.",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "bl": "pnpm run test:run && pnpm run trunk && pnpm run build",
    "build": "react-router build",
    "cf-typegen": "wrangler types",
    "deploy": "pnpm run build && wrangler deploy",
    "dev": "react-router dev",
    "preview": "pnpm run build && vite preview --mode production",
    "typecheck": "pnpm run cf-typegen && react-router typegen && pnpm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "npx eslint app test",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier app test --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "trunk": "./trunk flakytests validate --junit-paths \"./junit.xml\""
  },
